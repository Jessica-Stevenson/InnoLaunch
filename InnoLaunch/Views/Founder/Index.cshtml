@{
}
@model IEnumerable<InnoLaunch.Models.Founder>

@{
    ViewData["Title"] = "Founders";
}

<h2 class="mb-4">Startup Founders</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var founder in Model)
        {
            <tr>
                <td>@founder.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@founder.FounderId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@founder.FounderId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@founder.FounderId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Founder</a>